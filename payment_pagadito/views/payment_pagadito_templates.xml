<odoo noupdate="1">
    <!-- TODO: this is copy-paste from payment_paypal and wasn't tested -->
    <template id="pagadito_acquirer_button">
        <form t-if="acquirer.pagadito_uid" t-att-action="pagadito_url" method="get" target="_self">
            <!-- submit -->
            <button type="submit" width="100px"
                    t-att-class="submit_class">
                <img t-if="not submit_txt" src="/payment_pagadito/static/src/img/pagadito_icon.png"/>
                <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
            </button>
        </form>
    </template>

</odoo>
